# ===== Backend environment variables (example) =====
# Port (local)
PORT=4000

# PostgreSQL (Render)
# - Internal URL (Render): dùng host internal
# - External URL: thường cần ?sslmode=require
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/qr_attendance?sslmode=disable
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123456


# JWT
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRATION_MS=604800000

# Google OAuth client id (Google Identity Services)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
# OR
APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# CORS origins (comma separated)
APP_CORS_ORIGINS=http://localhost:5173

# Upload directory
UPLOAD_DIR=uploads

# Attendance config
ON_TIME_MINUTES=10
